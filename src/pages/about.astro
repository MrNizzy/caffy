---
import Layout from "../layouts/BlogPost.astro";
import DeveloperCard from "../components/DeveloperCard.astro";
import AppVersion from "../components/AppVersion.astro";
import CategoryCard from "../components/CategoryCard.astro";

const developers = [
  {
    name: "Brallan O. Hernandez P.",
    role: "Desarrollador Full Stack",
    bio: "Apasionado por el desarrollo web y móvil. Especialista en Angular, React y desarrollo de aplicaciones híbridas.",
    avatar: "https://avatars.githubusercontent.com/u/12632082?v=4",
    skills: [
      "Angular",
      "Ionic",
      "TypeScript",
      "Node.js",
      "SASS",
      "Python",
      "MySQL",
      "PostgreSQL",
      "Astro",
      "NestJS",
    ],
    github: "https://github.com/MrNizzy/",
    linkedin: "https://linkedin.com/in/MrNizzy",
    twitter: "https://x.com/Mr__Nizzy",
    website: "https://mrnizzy.me/",
  },
  {
    name: "Edwin B. Piraquive",
    role: "Desarrollador y analista de datos",
    bio: "Especialista en análisis de datos y visualización. Enfocado en soluciones de software basadas en datos.",
    avatar: "https://avatars.githubusercontent.com/u/102494596?v=4",
    skills: ["Python", "SQL", "Angular", "Power BI"],
    github: "https://github.com/Edwinburgos99",
    linkedin: "https://linkedin.com/in/edwin-burgos",
  },
];

const categories = [
  {
    title: "Geografía",
    items: [
      "Regiones",
      "Departamentos",
      "Municipios",
      "Sitios turísticos",
      "Clima",
    ],
  },
  {
    title: "Naturaleza",
    items: ["Especies nativas", "Especies invasoras", "Frutas"],
  },
  {
    title: "Cultura",
    items: [
      "Música y danzas",
      "Artesanías",
      "Lenguas indígenas",
      "Mitos y leyendas",
      "Deportes",
    ],
  },
  {
    title: "Historia y Política",
    items: [
      "Historia de Colombia",
      "Presidentes",
      "Constitución política",
      "Código de policía",
    ],
  },
  {
    title: "Gastronomía",
    items: ["Recetas de cocina"],
  },
];
---

<Layout
  title="Acerca de Caffy"
  description="Conoce más sobre Caffy, la aplicación que te conecta con lo mejor de Colombia."
  pubDate={new Date("May 07 2025")}
>
  <div class="hero-section" transition:animate="slide">
    <img
      src="/icon-fill.svg"
      alt="Logo de Caffy"
      class="logo"
      transition:animate="fade"
    />
    <h1 transition:animate="fade">
      ¡Descubre Colombia en la palma de tu mano!
    </h1>
    <p class="tagline" transition:animate="fade">
      Explora cada rincón de este país mágico, desde sus majestuosas montañas
      hasta sus exuberantes selvas. Sumérgete en su rica cultura, tradiciones
      vibrantes y la calidez de su gente. Encuentra información detallada sobre
      regiones, departamentos, municipios, sitios turísticos, especies nativas y
      mucho más. ¡Tu aventura colombiana comienza aquí!
    </p>
  </div>

  <section class="features" transition:animate="slide">
    <h2 transition:animate="fade">¿Qué te ofrece esta app?</h2>
    <ul transition:animate="fade">
      <li>
        <strong>Exploración interactiva:</strong> Mapas detallados y herramientas
        de búsqueda para encontrar lo que buscas.
      </li>
      <li>
        <strong>Información actualizada:</strong> Contenido revisado y ampliado constantemente
        para ofrecerte la información más precisa.
      </li>
      <li>
        <strong>Experiencia personalizada:</strong> Guarda tus lugares favoritos,
        crea listas de viajes y comparte tus descubrimientos con amigos.
      </li>
    </ul>
  </section>

  <section class="content-categories" transition:animate="slide">
    <h2 transition:animate="fade">Explora Colombia</h2>
    <div class="categories-grid">
      {
        categories.map((category) => (
          <CategoryCard title={category.title} items={category.items} />
        ))
      }
    </div>
  </section>

  <section class="development" transition:animate="slide">
    <h2 transition:animate="fade">Acerca del desarrollador</h2>
    <p transition:animate="fade">
      La aplicación fue desarrollada por <a
        href="https://github.com/Mist-Code-co"
        target="_blank">MistCode</a
      > con <a href="https://angular.io/" target="_blank">Angular</a> y <a
        href="https://ionicframework.com/"
        target="_blank">Ionic</a
      > en <a href="https://www.javascript.com/" target="_blank">JavaScript</a> y
      <a href="https://www.typescriptlang.org/" target="_blank">TypeScript</a>.
    </p>

    <h3 transition:animate="fade">Equipo de Desarrollo</h3>
    <div class="developers" transition:animate="fade">
      {
        developers.map((developer) => (
          <DeveloperCard
            name={developer.name}
            role={developer.role}
            bio={developer.bio}
            avatar={developer.avatar}
            skills={developer.skills}
            github={developer.github}
            linkedin={developer.linkedin}
            twitter={developer.twitter}
            website={developer.website}
          />
        ))
      }
    </div>
  </section>

  <AppVersion transition:animate="fade" />
</Layout>

<style>
  .hero-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .logo {
    width: 150px;
    margin: 0 auto 1rem;
    display: block;
  }

  .tagline {
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--text-color);
    margin-bottom: 2rem;
  }

  h1,
  h2,
  h3,
  h4 {
    color: var(--heading-color);
  }

  h2 {
    font-size: 2rem;
    margin: 2.5rem 0 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-light);
  }

  section {
    margin-bottom: 3rem;
  }

  .features ul {
    list-style-type: none;
    padding: 0;
  }

  .features li {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .categories-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }

  .developers {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .categories-grid,
    .developers {
      grid-template-columns: 1fr;
    }
  }
</style>
